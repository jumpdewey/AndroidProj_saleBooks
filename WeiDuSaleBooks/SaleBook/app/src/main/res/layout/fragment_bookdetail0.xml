<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.weidu.salebook.bookdetail0Fragment"
    android:id="@+id/bookdetail0"
    android:gravity="bottom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="War and Peace"
        android:id="@+id/booktitle0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#9400D3"
        android:gravity="top" />

    <ImageView
        android:layout_width="195dp"
        android:layout_height="195dp"
        android:id="@+id/imageView"
        android:src="@drawable/book0"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:layout_below="@+id/booktitle0"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author:"
        android:id="@+id/author0"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leo Tolstoy"
        android:id="@+id/author00"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_alignTop="@+id/author0"
        android:layout_toRightOf="@+id/booktitle0"
        android:layout_toEndOf="@+id/booktitle0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:id="@+id/description0"
        android:layout_below="@+id/author0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tolstoy himself said that War and Peace was &quot;not a novel, even less is it a poem, and still less a historical chronicle&quot;. "
        android:id="@+id/description00"
        android:layout_below="@+id/description0"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/description00"
        android:layout_marginTop="50dp"
        android:gravity="bottom">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="I Like :-)"
            android:id="@+id/button01"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:textColor="#F7F7F7"
            android:background="#FF1493" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:id="@+id/button02"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/button01"
            android:layout_toEndOf="@+id/button01"
            android:layout_weight="1"
            android:background="#912CEE"
            android:textColor="#BFEFFF" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="I Dislike ;-("
            android:id="@+id/button03"
            android:layout_alignBottom="@+id/button02"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:textColor="#D4D4D4"
            android:background="#B03060" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:id="@+id/price0"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/description00"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$20"
        android:id="@+id/price00"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/description00"
        android:layout_alignRight="@+id/description00"
        android:layout_alignEnd="@+id/description00"
        android:layout_marginTop="10dp" />

</RelativeLayout>
