<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.weidu.salebook.bookdetail1Fragment"
    android:id="@+id/bookdetail1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Red And The Black"
        android:id="@+id/booktitle1"
        android:gravity="left"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#9400D3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="195dp"
        android:layout_height="195dp"
        android:id="@+id/imageView2"
        android:src="@drawable/book1"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:layout_below="@+id/booktitle1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author:"
        android:id="@+id/author1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stendhal"
        android:id="@+id/author10"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_alignTop="@+id/author1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:id="@+id/description1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/author1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It chronicles the attempts of a provincial young man to rise socially beyond his modest upbringing through a combination of talent, hard work, deception, and hypocrisy. He ultimately allows his passions to betray him."
        android:id="@+id/description10"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/description1"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="bottom">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="I Like :-)"
            android:id="@+id/button10"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:textColor="#F7F7F7"
            android:background="#FF1493" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:id="@+id/button11"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/button10"
            android:layout_toEndOf="@+id/button10"
            android:layout_weight="1"
            android:background="#912CEE"
            android:textColor="#BFEFFF" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="I Dislike ;-("
            android:id="@+id/button12"
            android:layout_alignBottom="@+id/button11"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:textColor="#D4D4D4"
            android:background="#B03060"
            android:layout_marginTop="0dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:"
        android:id="@+id/price1"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/description10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$25"
        android:id="@+id/price10"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/description10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
